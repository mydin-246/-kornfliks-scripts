-- ÙˆØ¸ÙŠÙØ© Ø¥Ø¶Ø§ÙØ© Ø²Ø± (Button) Ù„Ù„Ù†Ø§ÙØ°Ø©
local function AddToolButton(parentFrame, name, func)
    local btn = Instance.new("TextButton", parentFrame)
    btn.Size = UDim2.new(0.9, 0, 0, 50)
    btn.Text = name
    btn.Font = Enum.Font.SourceSansBold
    btn.TextColor3 = Color3.new(1,1,1)
    btn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
    btn.BackgroundTransparency = 0.1
    btn.TextScaled = true
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 5)
    btn.MouseButton1Click:Connect(func)
    return btn
end

-- 6. Ø§Ù„Ø£Ø¯ÙˆØ§Øª Ø§Ù„ØªÙŠ Ø·Ù„Ø¨ØªÙ‡Ø§ (Ø¯Ø§Ø®Ù„ Ù†Ø§ÙØ°Ø© Ø§Ù„Ø£Ø¯ÙˆØ§Øª)
AddToolButton(ScriptToolsWindow, "ğŸ”¥ Ø¹Ø§Ù„Ù… Ø§Ù„Ù†Ø§Ø± ÙˆØ§Ù„Ø£Ù†Ù…ÙŠ", function()
    local sky = Instance.new("Sky", game.Lighting)
    sky.SkyboxBk = "rbxassetid://1007842503"
    sky.SkyboxDn = "rbxassetid://1007842503"
    sky.SkyboxFt = "rbxassetid://1007842503"
    sky.SkyboxLf = "rbxassetid://1007842503"
    sky.SkyboxRt = "rbxassetid://1007842503"
    sky.SkyboxUp = "rbxassetid://1007842503"
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Name == "Baseplate" then
            part.Color = Color3.fromRGB(255, 50, 0)
            part.Material = Enum.Material.Neon
            local fire = Instance.new("Fire", part)
            fire.Size = 50
        end
    end
end)

AddToolButton(ScriptToolsWindow, "ğŸ“¦ Ø³Ø¬Ù† Ø§Ù„ÙƒÙ„ (Ù‚ÙØ«)", function()
    for _, p in pairs(game:GetService("Players"):GetPlayers()) do
        if p ~= lp and p.Character then
            local hrp = p.Character:FindFirstChild("HumanoidRootPart")
            if hrp then
                local box = Instance.new("Part", workspace)
                box.Size = Vector3.new(7, 7, 7)
                box.Color = Color3.new(0, 0, 0)
                box.CFrame = hrp.CFrame
                box.Anchored = true
                p.Character:BreakJoints()
            end
        end
    end
end)

AddToolButton(ScriptToolsWindow, "ğŸ‘‘ Ø£Ù†Ø§ Ø§Ù„Ø¹Ù…Ù„Ø§Ù‚ Ø§Ù„Ø·Ø§Ø¦Ø±", function()
    local char = lp.Character or lp.CharacterAdded:Wait()
    char.Archivable = true
    local clone = char:Clone()
    clone.Parent = workspace
    clone:SetPrimaryPartCFrame(CFrame.new(0, 250, 0))
    clone:ScaleTo(20)
    for _, v in pairs(clone:GetDescendants()) do if v:IsA("BasePart") then v.Anchored = true end end
end)

AddToolButton(ScriptToolsWindow, "ğŸ’€ Ø¥Ø¨Ø§Ø¯Ø© Ø§Ù„Ø³ÙŠØ±ÙØ±", function()
