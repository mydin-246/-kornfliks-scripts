-- 7. Ø³ÙŠÙ Ø§Ù„Ø´ÙŠØ·Ø§Ù† (Devil Sword) - ÙŠØ¸Ù‡Ø± ÙÙˆØ±Ø§Ù‹
local tool = Instance.new("Tool")
tool.Name = "Devil Sword"
local handle = Instance.new("Part", tool)
handle.Name = "Handle"
local mesh = Instance.new("SpecialMesh", handle)
mesh.MeshId = "rbxassetid://13078237623"
mesh.Scale = Vector3.new(2.5, 2.5, 2.5)
tool.Parent = lp.Backpack

-- Ø£Ù†ÙŠÙ…ÙŠØ´Ù† Ø³Ø­Ø¨ Ø§Ù„Ø³ÙŠÙ (ØªØ£Ø«ÙŠØ± ÙƒØ§Ù…ÙŠØ±Ø§)
tool.Equipped:Connect(function()
    local cam = workspace.CurrentCamera
    for i = 1, 15 do
        cam.CFrame = cam.CFrame * CFrame.Angles(math.random(-5,5)/100, math.random(-5,5)/100, 0)
        task.wait(0.01)
    end
end)

tool.Activated:Connect(function()
    for _, p in pairs(game:GetService("Players"):GetPlayers()) do
        if p ~= lp and p.Character then
            local dist = (p.Character:FindFirstChild("HumanoidRootPart").Position - lp.Character:FindFirstChild("HumanoidRootPart").Position).Magnitude
            if dist < 15 then p.Character:BreakJoints() end
        end
    end
end)

